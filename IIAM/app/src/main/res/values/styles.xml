<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--FullScreen Style-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <!--End FullScreen Style-->

    <!--TextView Style-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
    </style>

    <style name="TextViewStyleBold" parent="TextViewStyle">
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="TextViewStyleMedium" parent="TextViewStyle">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="TextViewStyleRegular" parent="TextViewStyle">
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
    </style>
    <!--End TextView Style-->

    <!--TextInputLayout Style-->
    <style name="TextInputLayoutStyle">
        <item name="hintTextColor">@color/colorGreenBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
    </style>
    <!--End TextInputLayout Style-->

    <!--EditText Style-->
    <style name="EditTextHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="hintTextAppearance">@style/EditTextHintStyle</item>
    </style>

    <style name="EditTextStyleRegular" parent="EditTextStyle">
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
    </style>
    <!--End EditText Style-->

    <!--Button Style-->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_green_blue_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="ButtonStyleBold" parent="ButtonStyle">
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="ButtonStyleMedium" parent="ButtonStyle">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>
    <!--End Button Style-->

    <style name="MainTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_navigation</item>
    </style>

    <!--Navigation Drawer Style-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--End Navigation Drawer Style-->

    <!--Bottom Sheet Dialog Style-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--End Bottom Sheet Dialog Style-->

    <!--Progress Dialog Layout-->
    <style name="WhiteProgressTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    <!--End Progress Dialog Layout-->

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

</resources>